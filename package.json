{
    "name": "lion",
    "displayName": "lion",
    "description": "Language support for Libertas Object Notation (Lion)",
    "version": "0.0.1",
    "categories": [
        "Programming Languages"
    ],
    "author": "Libertas",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Libertas007/lion"
    },
    "publisher": "libertas",
    "keywords": [
        "json alternative",
        "lion",
        "lios",
        "libertas",
        "object notation"
    ],
    "engines": {
        "vscode": "^1.75.0"
    },
    "icon": "images/lion.png",
    "main": "./client/out/extension",
    "contributes": {
        "snippets": [
            {
                "language": "lion",
                "path": "./snippets/snippets.json"
            }
        ],
        "languages": [
            {
                "id": "lion",
                "extensions": [
                    ".lion"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/lion.svg",
                    "dark": "./images/lion.svg"
                }
            },
            {
                "id": "lios",
                "extensions": [
                    ".lios"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./images/lios.svg",
                    "dark": "./images/lios.svg"
                }
            }
        ],
        "grammars": [
            {
                "language": "lion",
                "scopeName": "source.lion",
                "path": "./syntaxes/lion.tmLanguage.json"
            },
            {
                "language": "lios",
                "scopeName": "source.lios",
                "path": "./syntaxes/lios.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "eslint": "^8.35.0",
        "mocha": "^9.2.1",
        "typescript": "^5.0.2"
    }
}
